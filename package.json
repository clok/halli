{
  "name": "halli",
  "version": "0.0.0",
  "description": "Color gradient generator and color picker",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:docs": "typedoc && cp CHANGELOG.md docs/ && cp CONTRIBUTING.md docs/ && cp README.md docs/ && cp LICENSE docs/",
    "changelog": "git-chglog -o CHANGELOG.md --next-tag v$(grep '\\\"version\\\":' package.json | grep -v git-chglog | awk -F '\\\"' '{print $4}')",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverageReporters=\"lcov\" --coverage",
    "version": "./release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clok/halli.git"
  },
  "author": "@clok",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clok/halli/issues"
  },
  "homepage": "https://github.com/clok/halli#readme",
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "prettier": "2.5.1",
    "ts-jest": "27.1.2",
    "typedoc": "0.22.10",
    "typedoc-plugin-markdown": "3.11.7",
    "typedoc-plugin-missing-exports": "0.22.6",
    "typescript": "4.5.4"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js,jsx,mjs}"
    ],
    "setupFiles": [],
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {},
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "web.js",
      "mjs",
      "node"
    ]
  }
}
